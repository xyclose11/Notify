@page
@model NoteApp.Areas.Identity.Pages.Account.Admin.UserList
@inject UserManager<User> UserManager


<table class="mw-50 mh-25" style="max-height: 100px">
    <thead>
    <tr>
        <th>Email</th>
        <th>Username</th>
        <th>Last Updated at (UTC)</th>
        <th>DB-ID</th>
    </tr>
    </thead>
    
    <tbody>
    @foreach(var User in Model.Users)
    {
        <tr>
            <td>@(User.Email)</td>
            <td>@(User.UserName)</td>
            <td>@(User.UpdatedAt)</td>
            <td>@(User.Id)</td>
        </tr>
    }
    </tbody>
    
</table>

<!-- Pagination -->
<div>
    @if (Model.CurrentPage > 1)
    {
        <a href="?currentPage=@(Model.CurrentPage - 1)">Previous</a>
    }
    
    <span>Page @Model.CurrentPage of @Model.TotalPages</span>
    
    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a href="?currentPage=@(Model.CurrentPage + 1)">Next</a>
    }
</div>



