@model NoteApp.Models.Note

<h1>Edit Note</h1>

@using (Html.BeginForm("Edit", "Note", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="mb-4">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.IsOwnedBy)
        @Html.HiddenFor(model => model.CreatedAt)
        @Html.HiddenFor(model => model.UpdatedAt)
        @Html.HiddenFor(model => model.CategoryId)
        @Html.HiddenFor(model => model.IsPublic)
        <div class="form-group">
                
            @*Header*@
            <div class="form-floating m-4">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                @Html.LabelFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>

            @*Body*@
            <div class="form-floating m-4">
                @Html.TextAreaFor(model => model.Body, new { @style = "red", @class = "form-control", rows = 12 })
                @Html.LabelFor(model => model.Body)
                @Html.ValidationMessageFor(model => model.Body)
            </div>


            <div class="form-floating m-4">
                <button type="submit" class="btn btn-success" value="save">Save Changes</button>
            </div>

        </div>

    </div>
}


