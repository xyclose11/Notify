@model IEnumerable<NoteApp.Models.Tag>

<div class="col-2 border border-primary border-1">
    <div class="row border border-1 m-1 rounded-3 border-secondary-subtle">
        <h3>Filters</h3>
    </div>
    <div class="row border border-1 m-1 rounded-3 border-secondary-subtle">
        <!-- Displays the categories -->
        <div class="dropdown-align-right p-0">
            <div class="form-floating mb-3 p-0">
                <select class="form-select" aria-label="Category Selector" id="categoryDropdown">
                    <option></option>
                </select>
                <label for="categoryDropdown">Category</label>
            </div>
        </div>    
    </div>

    <div class="row border border-1 m-1 rounded-3 border-secondary-subtle">
        <p>Groups!</p>
    </div>

    <div class="row border border-1 m-1 rounded-3 border-secondary-subtle">
        <div class="accordion" id="tagFilterAccordion">
            <div class="accordion-item">
                <h3 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTagFilter" aria-expanded="True" aria-controls="collapseTagFilter">
                        Tags
                    </button>
                </h3>
                <div id="collapseTagFilter" class="accordion-collapse collapse show" data-bs-parent="#tagFilterAccordion">
                    <div class="accordion-body">
                        <form action="/Note/FilterTag" method="post">
                            @foreach (var tag in Model)
                            {
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" role="switch" id="tagFilterCB+@tag.Id" value="@tag.Id"/>
                                    <label class="form-check-label" for="#tagFilterCB+@tag.Id">@tag.Name</label>
                                </div>
                            }
                        </form>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    
</div>