@model IEnumerable<NoteApp.Models.Note>

@foreach (var note in Model)
{ 
<div class="card m-2 p-0" style="width: 16rem; height: auto; max-height: 30rem;">
        <div class="card-header">
                <h2>@Html.DisplayFor(modelItem => note.Title)</h2>
        </div>
        
        <div class="card-body ms-3 overflow-auto">
                <p class="card-text">@Html.DisplayFor(modelItem => note.Body)</p>
        </div>

        <div class="card-footer p-0 pb-2 pt-2">
                
                <div class="btn-group btn-group-sm">
                        
                        <button class="btn btn-secondary" style="border-top-left-radius: 4px; border-bottom-left-radius: 4px">
                                <a class="text-decoration-none text-md-center text-white" href="@Url.Action("Edit", new { id = note.Id })">Edit</a>
                        </button>
                        <button class="btn btn-primary">
                                <a class="text-decoration-none text-md-center text-white" href="@Url.Action("Details", new { id = note.Id })">Details</a>
                        </button>
                        <button type="button" class="btn btn-danger" style="border-top-right-radius: 4px; border-bottom-right-radius: 4px" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                <a class="text-decoration-none text-md-center text-white">Delete</a>
                        </button>
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                        <div class="modal-content">
                                                <div class="modal-header">
                                                        <h1 class="modal-title text-black fs-5" id="exampleModalLabel">Delete Confirmation</h1>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                        <button type="button" class="btn btn-danger delete-note" data-note-id="@note.Id">Delete</button>
                                                </div>
                                        </div>
                                </div>
                        </div>
                </div>

        </div>

</div>

}